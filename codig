#include <stdio.h>

int main() {
    int dia = 2;

    switch (dia) {
        case 1: 
            printf("Segunda");
            break;
        case 2:
            printf("Terça");
            break;
        case 3:
            printf("Quarta");
            break;
        case 4:
            printf("Quinta");
            break;
        case 5:
            printf("Sexta");
            break;
        case 6:
            printf("Sábado");
            break;
        case 7:
            printf("Domingo");
            break;
        default:
            printf("Dia inválido");
    }

    return 0;
}
